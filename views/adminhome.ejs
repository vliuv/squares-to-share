<html>
    <head>
        <%- include("head.ejs", {}) %>
        <title>home</title>
    </head>
    <body>
        <header>
            <div class="title" >
                <p class="stitches">xxxxxxxxxxxxxxxx</p>
                <h1><a href="/adminhome">Squares to Share</a></h1>
                <p class="stitches">xxxxxxxxxxxxxxxx</p>
            </div>
            <nav>
                <h3><a href="/adminhome">admin</a></h3>
                <h3><a href="/">public</a></h3>
            </nav>
        </header>
        <br><br>
        <main>
            <div class="homeContent">
                <div class="blanket">
                    <% squares.forEach( (square) => { %>
                        <div class="square">
                            <div class="squareContents">
                                <img src="<%= square.image %>">
                            </div>
                            <div class="hoverLabel">
                                <form method="POST" action="/delete">
                                    <label for="square-<%=square._id%>" class="deleteLabel">+</label>
                                    <input id="square-<%=square._id%>" type="submit" name="deletebutton" value="" class="deleteButton">
                                    <input type="hidden" name="squareId" value="<%=square._id%>">
                                </form>
                                <a href="/adminsquare/<%= square._id %>" class="squareLink">
                                    <h4><%= square.name %></h4>
                                </a>
                                <div class="likeId likeLabel" id="like-<%= square._id %>">
                                    <i class="fa-solid fa-heart"></i>
                                    <div id="like-<%= square._id %>-text" style="display: inline;">
                                        <%=square.likes%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
        <a href="/adminhome" class="backToTop"><i class="fa-solid fa-arrow-up"></i></a>
        <footer>
            <p class="stitches">xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</p>
            <a href="/logout">logout</a>
        </footer>
    </body>
</html>